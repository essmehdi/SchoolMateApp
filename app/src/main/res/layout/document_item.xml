<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:background="?attr/selectableItemBackground"
    android:longClickable="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/document_item_file_type_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/home_button_background"
        android:padding="10dp"
        android:src="@drawable/ic_file"
        android:tint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/document_item_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/document_item_file_type_image"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/document_item_name_text"
            style="@style/TextAppearance.SchoolMate.ListItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/document_item_name_placeholder" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/document_item_date_text"
            style="@style/TextAppearance.SchoolMate.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/document_item_date_placeholder" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/document_item_tags_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/document_item_tags_placeholder"
            style="@style/TextAppearance.SchoolMate.DocumentTags"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--<androidx.appcompat.widget.AppCompatImageButton
