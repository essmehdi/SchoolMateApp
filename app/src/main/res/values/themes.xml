<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SchoolMate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SchoolMate.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SchoolMate.Navigation" parent="Theme.SchoolMate.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.SchoolMate.LoginWelcome" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextAppearance.SchoolMate.LoginTitle" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextAppearance.SchoolMate.LoginPunchline" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.SchoolMate.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextAppearance.SchoolMate.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextAppearance.SchoolMate.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/body</item>
    </style>

    <style name="TextAppearance.SchoolMate.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/body</item>
    </style>

    <style name="TextAppearance.SchoolMate.HomeButton" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.SchoolMate.HomeSectionTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextAppearance.SchoolMate.NoComplaints" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextAppearance.SchoolMate.ComplaintDetails" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/body</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.SchoolMate.ComplaintItemDetail" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/gray_low</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.SchoolMate.ListItemTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextAppearance.SchoolMate.DocumentTags" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.SchoolMate.TagChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/primary_transparent</item>
    </style>

    <style name="ComplaintDetailsIcon">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="Theme.SchoolMate.UserDetailsName" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Theme.SchoolMate.UserDetailsEmail" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Widget.SchoolMate.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@drawable/tab_layout</item>
        <item name="tabIndicator">@null</item>
    </style>

    <style name="TextAppearance.SchoolMate.SuggestionDetails" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/body</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.SchoolMate.AlertDetails" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/body</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="SuggestionDetailsIcon">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="AlertDetailsIcon">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>


    <style name="TextAppearance.SchoolMate.SuggestionItemDetail" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/gray_low</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.SchoolMate.AlertItemDetail" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/gray_low</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>